                   FontSize="27"
                   TextColor="#2457C5"
                   Margin="10,0,0,0">
            </Label>
            <Image Source="user.png"
                   HeightRequest="50"
                   WidthRequest="50"
                   >
                
            </Image>
        </FlexLayout>
        
        
        <Frame Margin="40,0" Padding="18,2" CornerRadius="25" BorderColor="#C9CFFF">

            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#BCC4FF" Offset="0.0" />
                    <GradientStop Color="#EAECFF" Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
            
            <Grid x:Name="Search">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="search"/>

                <autocomplete:SfAutoComplete Grid.Column="1"
                                             Watermark="Buscar Grupo..."
                                             TextSize="14"
                                             WatermarkColor="#7694E0"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalOptions="Center"
                                             ShowBorder="False"/>
            </Grid>
        </Frame>


